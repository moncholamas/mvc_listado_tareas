@model socavon_web.ViewModels.LogupViewModel


<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h2>Completa el formulario</h2>
            <form asp-controller="Login" asp-action="Logup" method="post">
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" type="text" placeholder="Usuario" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Apellido" class="control-label"></label>
                    <input asp-for="Apellido" type="text" placeholder="Usuario" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Correo" class="control-label"></label>
                    <input asp-for="Correo" type="text" placeholder="correo@ejemplo.com" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Clave" class="control-label"></label>
                    <input asp-for="Clave" type="password" placeholder="0000000000" class="form-control" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClaveVerificada" class="control-label"></label>
                    <input asp-for="ClaveVerificada" type="password" placeholder="0000000000" class="form-control" />
                    <span asp-validation-for="ClaveVerificada" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input value="Registarse" type="submit" class="btn btn-block btn-info" />
                </div>
            </form>
        </div>
    </div>
</div>


@section scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
 }

